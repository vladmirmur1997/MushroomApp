<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/save"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingTop="25dp"
    tools:context=".LoadWalkActivity">
    <ScrollView
        android:id="@+id/F_scroll"
        android:layout_width="match_parent"
        android:layout_height="300dp"
        app:layout_constraintTop_toTopOf="parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">
            <ListView
                android:id="@+id/walksList"
                android:choiceMode="multipleChoice"
                android:layout_width="match_parent"
                android:layout_height="300dp"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent">
            </ListView>
        </LinearLayout>
    </ScrollView>
    <Button
        android:id="@+id/select"
        android:theme="@style/BtnStyle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:onClick="select_all"
        android:text="Убрать все/Выбрать все"
        app:layout_constraintLeft_toLeftOf="@id/F_scroll"
        app:layout_constraintTop_toBottomOf="@id/F_scroll" />
    <Button
        android:id="@+id/delete"
        android:theme="@style/DelBtnStyle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:onClick="delete"
        android:text="Удалить последний поход"
        app:layout_constraintLeft_toLeftOf="@id/select"
        app:layout_constraintTop_toBottomOf="@id/select" />
    <Button
        android:id="@+id/Back"
        android:theme="@style/BtnStyle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:onClick="back"
        android:text="Назад"
        app:layout_constraintLeft_toLeftOf="@id/delete"
        app:layout_constraintTop_toBottomOf="@id/delete" />

</androidx.constraintlayout.widget.ConstraintLayout>